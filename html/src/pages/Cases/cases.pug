extends ../../_layouts/default

block container
    .heading.mb-10 Search existing case - Signify Customer Portal (ChatGPT Test)
    .form-wrap.mb-20
        .row.gy-8.mb-15
            .col-lg-6
                +input("Ticket ID:")
            .col-lg-6
                +input("Subject:")
            .col-12
                label.form-label Status:
                select.form-select(multiple)
                    each val in ["News", "Assigned", "Resolved", "Onsite", "Closed", "Closed"]
                        option= val
        .hstack.gap-6
            button.btn.btn-primary.btn-min(type="button") Search
            button.btn.btn-outline-primary.btn-min(type="button") Clear
    .table-wrap
        table.table
            thead
                tr
                    th Ticket ID
                    th Subject
                    th Type
                    th Category
                    th Priority
                    th Status
                    th Created By
                    th Created Date
            tbody
                each val in [1, 2, 3, 4, 5, 6, 7, 8]
