mixin textarea(label, required)
    - var handle= label ? `${label.toLowerCase().replace(/ /g,'-')}` : undefined

    label.form-label(for=handle)
        = label
        if required
            span *
    textarea.form-control(id=handle)&attributes(attributes)

mixin search-input
    .search-input
        input(type="text" placeholder="Search the documentation...")
        +icon("search")

mixin pagination(text)
    .pagination
        button
            +icon("prev")
            +icon("prev")
        button
            +icon("prev")
        span= text
        button
            +icon("next")
        button
            +icon("next")
            +icon("next")