mixin icon(name)
    svg(role="img")&attributes(attributes)
        use(xlink:href="#icon-"+name)

mixin input(label, required, text)
    - var handle= label ? `${formName}-${label.toLowerCase().replace(/ /g,'-')}` : undefined

    label.form-label(for=handle)
        = label
        if required
            span *
    input.form-control(id=handle type="text")&attributes(attributes)
    if text
        .form-text= text

mixin textarea(label, required)
    - var handle= label ? `${formName}-${label.toLowerCase().replace(/ /g,'-')}` : undefined

    label.form-label(for=handle)
        = label
        if required
            span *
    textarea.form-control(id=handle)&attributes(attributes)

mixin search-input
    .seach-input
        input(type="text" placeholder="Search the documentation...")
        +icon("search")