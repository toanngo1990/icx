mixin icon(name)
    svg(role="img")&attributes(attributes)
        use(xlink:href="#icon-"+name)

mixin input(label, required, text)
    - var handle= label ? `${label.toLowerCase().replace(/ /g,'-')}` : undefined

    label.form-label(for=handle)
        = label
        if required
            span *
    input.form-control(id=handle type="text")&attributes(attributes)
    if text
        .form-text= text

mixin input-inline(label, required, text)
    - var handle= label ? `${label.toLowerCase().replace(/ /g,'-')}` : undefined

    .col-auto
        label.form-label.col-form-label(for=handle)
            = label
            if required
                span *
    .col-auto
        input.form-control(id=handle type="text")&attributes(attributes)
    if text
        .col-auto
            .form-text= text

