include mixins-all

block vars

doctype html
html(lang="en")
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
        title Title
        // Base styles
        link(rel="stylesheet" href="css/bundle.min.css")
        link(rel="stylesheet" href="css/app.min.css")
    body(class=(bodyClass && bodyClass))
        .wrapper
            // START HEADER
            include ../_components/Header/header
            // CLOSE HEADER

            // START CONTENT
            .main
                .container-fluid
                    .main__body
                        block container
                    .main__header
                        include ../_components/Nav/nav
            // CLOSE CONTENT

            // START FOOTER
            include ../_components/Footer/footer
            // CLOSE FOOTER

        // Base scripts
        script(src="js/jquery.min.js")
        script(src="js/bundle.min.js")
        script(src="js/app.js")
        // Icon sprites
        include icons.html